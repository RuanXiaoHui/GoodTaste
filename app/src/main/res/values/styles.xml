<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- activity大字体 白色 -->
    <style name="activity_text_normal_white">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:gravity">center</item>
        <item name="android:lines">1</item>

        <item name="android:textColor">@color/activity_text_white</item>
    </style>

    <!-- activity正常字体 黑色 -->
    <style name="activity_text_normal_black">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_size_normal</item>
        <item name="android:gravity">center</item>
        <item name="android:lines">1</item>
        <item name="android:textColor">@color/activity_text_black</item>
    </style>

    <!-- activity正常字体 灰色 -->
    <style name="activity_text_normal_gray">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_size_normal</item>
        <item name="android:gravity">center</item>
        <item name="android:lines">1</item>
        <item name="android:textColor">@color/activity_text_gray</item>
    </style>

    <!-- activity正常字体 蓝色 -->
    <style name="activity_text_normal_blue">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_size_normal</item>
        <item name="android:gravity">center</item>
        <item name="android:lines">1</item>
        <item name="android:textColor">@color/activity_text_blue</item>
    </style>

    <!-- activity小字体 黑色 -->
    <style name="activity_text_small_black">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:gravity">center</item>
        <item name="android:lines">1</item>
        <item name="android:textColor">@color/activity_text_black</item>
    </style>

    <!-- activity小字体 灰色 -->
    <style name="activity_text_small_gray">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:gravity">center</item>
        <item name="android:lines">1</item>
        <item name="android:textColor">@color/activity_text_gray</item>
    </style>

    <!-- activity超小字体 灰色 -->
    <style name="activity_text_micro_gray">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_size_micro</item>
        <item name="android:gravity">center</item>
        <item name="android:lines">1</item>
        <item name="android:textColor">@color/activity_text_gray</item>
    </style>

    <!-- 确定类Button按钮 -->
    <style name="button_bottom">
        <item name="android:textSize">@dimen/text_size_normal</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@null</item>
        <item name="android:textColor">@color/activity_text_white</item>
    </style>

    <!-- 确定类Button按钮 -->
    <style name="button_positive">
        <item name="android:textSize">@dimen/text_size_normal</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@color/positive_green</item>
        <item name="android:textColor">@color/activity_text_white</item>
    </style>

    <!-- activity超小图标 -->
    <style name="icon_micro">
        <item name="android:layout_width">@dimen/icon_micro_width</item>
        <item name="android:layout_height">@dimen/icon_micro_hight</item>
        <item name="android:scaleType">centerInside</item>
    </style>

    <!-- activity小图标 -->
    <style name="icon_small">
        <item name="android:layout_width">@dimen/icon_small_width</item>
        <item name="android:layout_height">@dimen/icon_small_hight</item>
        <item name="android:gravity">center</item>
        <item name="android:scaleType">centerInside</item>
    </style>

    <!-- activity正常图标 -->
    <style name="icon_normal">
        <item name="android:layout_width">@dimen/icon_normal_width</item>
        <item name="android:layout_height">@dimen/icon_normal_hight</item>
        <item name="android:gravity">center</item>
        <item name="android:scaleType">centerInside</item>
    </style>

    <!-- 圆形Checkbox 收货地址 -->
    <style name="checkbox_circle">
        <item name="android:layout_width">@dimen/icon_normal_width</item>
        <item name="android:layout_height">@dimen/icon_normal_hight</item>
        <item name="android:gravity">center</item>
        <item name="android:button">@drawable/selector_checkbox_address</item>
        <item name="android:scaleType">centerInside</item>
    </style>

    <!-- 黑色小字体 -->
    <style name="text_small_black">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_size_small</item>
    </style>

    <!-- 白色小字体 -->
    <style name="text_small_white">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_size_small</item>
    </style>

    <!-- 红色小字体-->
    <style name="text_small_red">
        <item name="android:textColor">@color/red</item>
        <item name="android:textSize">@dimen/text_size_small</item>
    </style>

    <!-- 黑色大字体 -->
    <style name="text_large_black">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_size_large</item>
    </style>

    <!-- 黑色大字体 -->
    <style name="text_large_white">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_size_large</item>
    </style>

    <!-- 正常字体 -->
    <style name="text_normal">
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">@dimen/text_size_normal</item>
    </style>

    <!-- 正常黑色字体-->
    <style name="text_normal_black">
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_size_normal</item>
    </style>

    <!-- 正常白色字体-->
    <style name="text_normal_white">
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_size_normal</item>
    </style>

    <!-- 正常红色字体-->
    <style name="text_normal_red">
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/red</item>
        <item name="android:textSize">@dimen/text_size_normal</item>
    </style>

    <!-- 蓝色按钮白色字体 -->
    <style name="button_blue_text_white">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_size_normal</item>
        <item name="android:background">@color/blue</item>
        <item name="android:layout_margin">@dimen/small_margin</item>
    </style>

    <!-- 深蓝色按钮白色字体 -->
    <style name="button_blueDark_text_white">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_size_normal</item>
        <item name="android:background">@color/blue</item>
        <item name="android:layout_margin">@dimen/small_margin</item>
    </style>

    <!-- 按钮白色字体 -->
    <style name="button_text_white">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_size_normal</item>
        <item name="android:layout_margin">@dimen/small_margin</item>
    </style>

    <!--HomeFragment title-->
    <style name="style_home_top_bar_text">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/activity_main_tab_bg</item>
    </style>

    <!--收货地址性别RadioButton单选按钮-->
    <style name="radioButton_circle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@null</item>
        <item name="android:button">@drawable/selector_radiobutton_gender</item>
        <item name="android:textColor">@color/activity_text_black</item>
        <item name="android:textSize">@dimen/text_size_normal</item>
        <item name="android:paddingLeft">@dimen/common_padding_normal</item>
    </style>


    <!--收货地址EditText-->
    <style name="activity_address_editText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@null</item>
        <item name="android:lines">1</item>
        <item name="android:gravity">left|top</item>
        <item name="android:textSize">@dimen/text_size_normal</item>
        <item name="android:textColor">@color/activity_text_black</item>
    </style>


    <!--orderFragment的粗分割线-->
    <style name="crude_dividing_line">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">10dp</item>
        <item name="android:background">@color/line_horizontal</item>
    </style>
    <!--orderFragment的细分割线-->
    <style name="thin_dividing_line">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/line_horizontal</item>
    </style>



    <!--MineFragment -->
    <style name="style_mine_vertical_linearlayout">
        <item name="android:layout_width">@dimen/fragment_mine_ll_vertical_width</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/white</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:orientation">vertical</item>
    </style>


</resources>
