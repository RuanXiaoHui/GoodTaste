<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- 黑色小字体 -->
    <style name="text_small_black">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_size_small</item>
    </style>

    <!-- 白色小字体 -->
    <style name="text_small_white">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_size_small</item>
    </style>

    <!-- 红色小字体-->
    <style name="text_small_red">
        <item name="android:textColor">@color/red</item>
        <item name="android:textSize">@dimen/text_size_small</item>
    </style>

    <!-- 黑色大字体 -->
    <style name="text_large_black">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_size_large</item>
    </style>

    <!-- 黑色大字体 -->
    <style name="text_large_white">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_size_large</item>
    </style>

    <!-- 正常字体 -->
    <style name="text_normal">
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">@dimen/text_size_normal</item>
    </style>

    <!-- 正常黑色字体-->
    <style name="text_normal_black">
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_size_normal</item>
    </style>

    <!-- 正常白色字体-->
    <style name="text_normal_white">
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_size_normal</item>
    </style>

    <!-- 正常红色字体-->
    <style name="text_normal_red">
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/red</item>
        <item name="android:textSize">@dimen/text_size_normal</item>
    </style>

    <!-- 蓝色按钮白色字体 -->
    <style name="button_blue_text_white">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_size_normal</item>
        <item name="android:background">@color/blue</item>
        <item name="android:layout_margin">@dimen/small_margin</item>
    </style>

    <!-- 深蓝色按钮白色字体 -->
    <style name="button_blueDark_text_white">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_size_normal</item>
        <item name="android:background">@color/blue</item>
        <item name="android:layout_margin">@dimen/small_margin</item>
    </style>

    <!-- 按钮白色字体 -->
    <style name="button_text_white">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_size_normal</item>
        <item name="android:layout_margin">@dimen/small_margin</item>
    </style>

    <!--HomeFragment title-->
    <style name="style_home_top_bar_text">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/activity_main_tab_bg</item>
    </style>

</resources>
