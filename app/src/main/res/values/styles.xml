<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- activity大字体 白色 -->
    <style name="text_normal_white" >
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/activity_text_white</item>
    </style>

    <!-- activity正常字体 黑色 -->
    <style name="text_normal_black" >
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_size_normal</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/activity_text_black</item>
    </style>

    <!-- activity正常字体 灰色 -->
    <style name="text_normal_gray" >
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_size_normal</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/activity_text_gray</item>
    </style>

    <!-- activity正常字体 蓝色 -->
    <style name="text_normal_blue" >
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_size_normal</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/activity_text_blue</item>
    </style>

    <!-- activity小字体 黑色 -->
    <style name="text_small_black" >
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/activity_text_black</item>
    </style>


    <!-- activity小字体 灰色 -->
    <style name="text_small_gray" >
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/activity_text_gray</item>
    </style>

    <!-- activity超小字体 灰色 -->
    <style name="text_micro_gray" >
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_size_micro</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/activity_text_gray</item>
    </style>

    <!-- 确定类Button按钮 -->
    <style name="button_bottom" >
        <item name="android:textSize">@dimen/text_size_normal</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@null</item>
        <item name="android:textColor">@color/activity_text_white</item>
    </style>

    <!-- 确定类Button按钮 -->
    <style name="button_positive" >
        <item name="android:textSize">@dimen/text_size_normal</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@color/positive_green</item>
        <item name="android:textColor">@color/activity_text_white</item>
    </style>

    <!-- activity超小图标 -->
    <style name="icon_micro" >
        <item name="android:layout_width">@dimen/icon_micro_width</item>
        <item name="android:layout_height">@dimen/icon_micro_hight</item>
        <item name="android:scaleType">centerInside</item>
    </style>

    <!-- activity小图标 -->
    <style name="icon_small" >
        <item name="android:layout_width">@dimen/icon_small_width</item>
        <item name="android:layout_height">@dimen/icon_small_hight</item>
        <item name="android:gravity">center</item>
        <item name="android:scaleType">centerInside</item>
    </style>

    <!-- activity正常图标 -->
    <style name="icon_normal" >
        <item name="android:layout_width">@dimen/icon_normal_width</item>
        <item name="android:layout_height">@dimen/icon_normal_hight</item>
        <item name="android:gravity">center</item>
        <item name="android:scaleType">centerInside</item>
    </style>

    <!-- 圆形Checkbox 收货地址 -->
    <style name="checkbox_circle" >
        <item name="android:layout_width">@dimen/icon_normal_width</item>
        <item name="android:layout_height">@dimen/icon_normal_hight</item>
        <item name="android:gravity">center</item>
        <item name="android:button">@drawable/selector_checkbox_address</item>
        <item name="android:scaleType">centerInside</item>
    </style>

</resources>
