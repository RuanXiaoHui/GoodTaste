<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="www.formssi.goodtaste.activity.order.OrderStateActivity"
    android:orientation="vertical">

<include layout="@layout/layout_back_title_bar"/>

    <android.support.design.widget.TabLayout
        android:id="@+id/tab_layout"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_alignParentBottom="true"
        app:tabIndicatorHeight="1dp"
        app:tabSelectedTextColor="@color/appColor"
        app:tabIndicatorColor="@color/appColor"
        >

    </android.support.design.widget.TabLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/vpOrderState"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/top_text">

    </android.support.v4.view.ViewPager>



</LinearLayout>
