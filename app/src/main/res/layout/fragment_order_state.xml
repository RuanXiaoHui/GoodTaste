<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="www.formssi.goodtaste.fragment.OrderStateFragment">


    <android.support.v7.widget.RecyclerView
        android:id="@+id/rlvOrderState"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


    </android.support.v7.widget.RecyclerView>

    <LinearLayout
        android:id="@+id/lltNoOrder"
        style="@style/order_fragment_no_order_llt">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/no_order_tv_content" />

        <Button
            android:id="@+id/btnGoSingle"
            style="@style/order_fragment_no_order_btn" />
    </LinearLayout>
</FrameLayout>
