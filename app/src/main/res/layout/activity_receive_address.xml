<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!--收货地址-->

    <include layout="@layout/layout_back_titlebar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <ListView
            android:id="@+id/lv_ReceiveAddressActivity_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:divider="@color/line_horizontal"
            android:dividerHeight="@dimen/listView_dividerHeight"
            android:scrollbars="none" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_height_low"
        android:background="@color/line_horizontal" />

    <LinearLayout
        android:id="@+id/llt_ReceiveAddressActivity_addAddress"
        android:layout_width="match_parent"
        android:layout_height="@dimen/activity_bottom_hight"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_ReceiveAddressActivity_selected"
            style="@style/icon_normal"
            android:src="@mipmap/ic_add_address" />

        <TextView
            style="@style/text_normal_blue"
            android:layout_marginLeft="@dimen/common_margin_normal"
            android:text="@string/activity_receiveAddress_addAddress" />

    </LinearLayout>

</LinearLayout>
