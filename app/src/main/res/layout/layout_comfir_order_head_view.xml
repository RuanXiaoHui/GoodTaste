<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/llt_foodList_headView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <!--订单食物列表顶部-->
    <LinearLayout
        android:id="@+id/llt_ConfirmOrderActivity_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="@dimen/common_margin_medium">

        <ImageView
            style="@style/icon_normal"
            android:src="@mipmap/ic_location" />

        <TextView
            android:id="@+id/tv_ConfirmOrderActivity_addressNull"
            style="@style/activity_text_normal_blue"
            android:text="@string/activity_addNewAddress_title"
            android:visibility="gone" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/common_margin_normal"
            android:layout_weight="1"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_ConfirmOrderActivity_name"
                    style="@style/activity_text_normal_black"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_ConfirmOrderActivity_gender"
                    style="@style/activity_text_normal_black"
                    android:layout_marginLeft="@dimen/common_margin_small" />

                <TextView
                    android:id="@+id/tv_ConfirmOrderActivity_phone"
                    style="@style/activity_text_normal_black"
                    android:layout_marginLeft="@dimen/common_margin_normal" />

            </LinearLayout>

            <TextView
                android:id="@+id/tv_ConfirmOrderActivity_address"
                style="@style/activity_text_small_gray"
                android:layout_marginTop="@dimen/common_margin_normal" />

        </LinearLayout>

        <ImageView
            style="@style/icon_micro"
            android:src="@mipmap/ic_spread" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_height_high"
        android:background="@color/line_horizontal" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="@dimen/common_padding_medium">

        <ImageView
            android:id="@+id/iv_ConfirmOrderActivity_store"
            style="@style/icon_normal" />

        <TextView
            android:id="@+id/tv_ConfirmOrderActivity_storeName"
            style="@style/activity_text_normal_gray"
            android:layout_marginLeft="@dimen/common_margin_normal" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_height_low"
        android:background="@color/line_horizontal" />

</LinearLayout>