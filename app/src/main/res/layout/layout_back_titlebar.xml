<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/activity_back_titlebar_hight">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/activity_back_titlebar_hight"
        android:background="@color/back_titlebar_background"
        android:gravity="center_vertical|left"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/activity_back_titlebar_paddingLeft"
        android:paddingRight="@dimen/activity_back_titlebar_paddingRight">

        <ImageView
            android:id="@+id/iv_backTitlebar_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_titlebar_back" />

        <TextView
            android:id="@+id/tv_backTitlebar_Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/activity_back_titlebar_marginLeft"
            android:textColor="@color/back_titlebar_titleColor"
            android:textSize="@dimen/text_size_medium" />

    </LinearLayout>

</LinearLayout>
