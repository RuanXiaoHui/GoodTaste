<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/llt_foodList_headView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/activity_common_background_gray1"
    android:orientation="vertical">

    <!--订单食物列表尾部-->
    <LinearLayout
        android:id="@+id/llt_foodList_footView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/line_height_low"
            android:background="@color/line_horizontal" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="@dimen/common_padding_medium">

            <TextView
                style="@style/activity_text_normal_black"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:gravity="left|center_vertical"
                android:text="@string/activity_confirmOrder_distributionCost" />

            <TextView
                android:id="@+id/tv_ConfirmOrderActivity_distributionCost"
                style="@style/activity_text_normal_black"
                android:layout_marginLeft="@dimen/common_margin_normal" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/line_height_low"
            android:background="@color/line_horizontal" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="@dimen/common_padding_medium">

            <TextView
                style="@style/activity_text_normal_black"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:gravity="left|center_vertical"
                android:text="@string/activity_confirmOrder_redPackets" />

            <TextView
                android:id="@+id/tv_ConfirmOrderActivity_redPackets"
                style="@style/activity_text_normal_black"
                android:layout_marginLeft="@dimen/common_margin_normal" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/line_height_low"
            android:background="@color/line_horizontal" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="@dimen/common_padding_medium">

            <TextView
                style="@style/activity_text_normal_black"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:gravity="left|center_vertical"
                android:text="@string/activity_confirmOrder_coupon" />

            <TextView
                android:id="@+id/tv_ConfirmOrderActivity_coupon"
                style="@style/activity_text_normal_black"
                android:layout_marginLeft="@dimen/common_margin_normal" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/llt_ConfirmOrderActivity_orderRemarks"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/common_margin_normal"
            android:paddingBottom="@dimen/common_padding_large"
            android:paddingLeft="@dimen/common_padding_medium"
            android:paddingRight="@dimen/common_padding_medium"
            android:paddingTop="@dimen/common_padding_large">

            <TextView
                style="@style/activity_text_normal_black"
                android:text="@string/activity_confirmOrder_orderRemarks" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical|right"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_ConfirmOrderActivity_remarks"
                    style="@style/activity_text_micro_gray"
                    android:layout_marginLeft="@dimen/common_margin_normal"
                    android:layout_marginRight="@dimen/common_margin_small"
                    android:text="@string/activity_confirmOrder_orderNote" />

                <ImageView
                    style="@style/icon_micro"
                    android:src="@mipmap/ic_spread" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/line_horizontal"
            android:orientation="vertical"
            android:visibility="gone">

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/line_height_low"
                android:background="@color/line_horizontal" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>