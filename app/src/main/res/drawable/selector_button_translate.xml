<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="false">
        <shape>
            <solid android:color="@color/grayLight"></solid>
            <corners android:radius="8dp"></corners>
        </shape>
    </item>
    <item android:state_checked="true">
        <shape>
            <solid android:color="@color/button_pressed_background"></solid>
            <corners android:radius="8dp"></corners>
            <stroke android:width="1dp" android:color="@color/button_pressed_stroke" />
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape>
            <solid android:color="@color/button_pressed_background"></solid>
            <corners android:radius="8dp"></corners>
            <stroke android:width="1dp" android:color="@color/button_pressed_stroke" />
        </shape>
    </item>
    <item>
        <shape>
            <solid android:color="@color/transparent"></solid>
            <corners android:radius="8dp"></corners>
            <stroke android:width="1dp" android:color="@color/appColor" />
        </shape>
    </item>
</selector>
